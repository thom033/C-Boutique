@* @model List<StationWeb.Controllers.Compte> *@
@{
    ViewData["Title"] = "Home Page";
}
<style>
.form-container {
    margin-bottom: 100px;
}
.center-div {
    margin: auto;
    width: 80%; /* Ajustez selon vos besoins */
    text-align: center; /* Centre le texte à l'intérieur du div */
}
table {
    margin-top: 20px; /* Espacement entre le titre et la table */
    width: 100%; /* La table prend toute la largeur du div */
    border-collapse: collapse; /* Pour un meilleur rendu de la table */
}
th, td {
    border: 1px solid #ddd; /* Bordure des cellules */
    padding: 8px; /* Espacement à l'intérieur des cellules */
}
th {
    background-color: #f2f2f2; /* Couleur de fond des en-têtes de colonne */
}
.table-container {
    display: flex;
    justify-content: space-between;
}
.table-container table {
    width: 48%; /* Ajustez selon vos besoins */
}
</style>

<div class="text-center form-container">
    <div class="center-div">
        <h1>Détails factures clients</h1>
        <div class="table-container">
            <table>
                <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">Désignation</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">Magasin</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">Date</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">Remarque</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">État</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">Montant</th>
                        <td></td>
                    </tr>
                </tbody>
            </table>
            <table class="table table-bordered" id="facture-table">
                <tbody>
                    <tr>
                        <th scope="row">Devise</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">Client</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">Montant TVA</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">Montant TTC</th>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row">Montant Payé</th>
                        <td></td>
                    </tr>
                </tbody>
            </table>

            

        </div>
            <button type="button" class="btn btn-info">Viser</button>
            <button type="button" class="btn btn-warning">Annuler</button>
            <button type="button" class="btn btn-success">Modifier</button>
    </div>

    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" href="#details" data-toggle="tab">Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#ecritures" data-toggle="tab">Ecritures</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#livraison-details" data-toggle="tab">Livraison Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#plan-de-payements" data-toggle="tab">Plan de Payements</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade show active" id="details">
            <!-- Contenu pour Details -->
        </div>
        <div class="tab-pane fade" id="ecritures">
            <!-- Contenu pour Ecritures -->
        </div>
        <div class="tab-pane fade" id="livraison-details">
            <!-- Contenu pour Livraison Details -->
        </div>
        <div class="tab-pane fade" id="plan-de-payements">
            <!-- Contenu pour Plan de Payements -->
        </div>
    </div>
</div>

<!-- Inclusion de Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<!-- Inclusion de FontAwesome pour l'icône -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">